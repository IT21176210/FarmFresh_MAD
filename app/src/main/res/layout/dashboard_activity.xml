<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:id="@+id/dashBoardContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <LinearLayout
            android:id="@+id/MyDashBoard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/MyDashBoardTop"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_gravity="top"
                android:background="@color/purple_500"
                android:backgroundTint="#3EA055">

                <RelativeLayout
                    android:id="@+id/MyDashBoardTop1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@color/purple_500"
                    android:backgroundTint="#3EA055">

                    <TextView
                        android:id="@+id/text_view_id"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Dashboard"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="20dp"/>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/MyDashBoardTop2"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:gravity="left|center_vertical"
                    android:backgroundTint="#3EA055"
                    android:background="@android:color/transparent">

                </RelativeLayout>
                <ImageButton
                    android:id="@+id/dropDown"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:contentDescription="select options"
                    android:src="@drawable/menu1"
                    android:backgroundTint="#3EA055"
                    android:background="@android:color/transparent"/>
            </RelativeLayout>

            <Button
                android:id="@+id/btnMyAccount"
                android:layout_width="200dp"
                android:layout_height="0dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/user"
                android:gravity="center_horizontal|center_vertical"
                android:text=" My Account"
                android:textAllCaps="false"
                android:visibility="visible"
                android:backgroundTint="#3EA055"
                tools:ignore="Suspicious0dp" />

            <Button
                android:id="@+id/btnIncome"
                android:layout_width="200dp"
                android:layout_height="0dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/income"
                android:gravity="center_horizontal|center_vertical"
                android:text="Income"
                android:textAllCaps="false"
                android:backgroundTint="#3EA055"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnExpenses"
                android:layout_width="200dp"
                android:layout_height="0dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/expense"
                android:gravity="center_horizontal|center_vertical"
                android:text="Expenses"
                android:textAllCaps="false"
                android:backgroundTint="#3EA055"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnInventory"
                android:layout_width="200dp"
                android:layout_height="0dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/inventory"
                android:gravity="center_horizontal|center_vertical"
                android:text="Inventory"
                android:textAllCaps="false"
                android:backgroundTint="#3EA055"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnReports"
                android:layout_width="200dp"
                android:layout_height="0dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/report"
                android:gravity="center_horizontal|center_vertical"
                android:text="Reports"
                android:textAllCaps="false"
                android:backgroundTint="#3EA055"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnOverview"
                android:layout_width="200dp"
                android:layout_height="0dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/overview"
                android:gravity="center_horizontal|center_vertical"
                android:text="Financial Overview"
                android:textAllCaps="false"
                android:backgroundTint="#3EA055"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnSignOut"
                android:layout_width="200dp"
                android:layout_height="0dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/overview"
                android:gravity="center_horizontal|center_vertical"
                android:text="SignOut"
                android:textAllCaps="false"
                android:backgroundTint="#3EA055"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/MyDashBoardBottom"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:background="@color/purple_500"
                android:backgroundTint="#3EA055"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/MyDashBoardBottom1"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/purple_500"
                    android:backgroundTint="#3EA055"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btnHome"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|left"
                        android:contentDescription="personalinfo"
                        android:src="@drawable/home" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/MyDashBoardBottom2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/purple_500"
                    android:gravity="center_vertical|right"
                    android:backgroundTint="#3EA055"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btnPersonalInfo"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:contentDescription="personalinfo"
                        android:src="@drawable/user" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>