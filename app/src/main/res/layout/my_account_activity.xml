<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyAccountActivity">

            <RelativeLayout
                android:id="@+id/MyDashBoardTop"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_gravity="top"
                android:background="@color/purple_500"
                android:backgroundTint="#3EA055">

                <RelativeLayout
                    android:id="@+id/MyDashBoardTop1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@color/purple_500"
                    android:backgroundTint="#3EA055">

                    <TextView
                        android:id="@+id/text_view_id"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="My Account"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="20dp"/>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/MyDashBoardTop2"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:gravity="left|center_vertical"
                    android:backgroundTint="#3EA055"
                    android:background="@android:color/transparent">

                </RelativeLayout>
                <ImageButton
                    android:id="@+id/btnHome"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:contentDescription="select options"
                    android:src="@drawable/menu1"
                    android:backgroundTint="#3EA055"
                    android:background="@android:color/transparent"/>
            </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/MyDashBoardTop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="21dp"
        android:layout_marginBottom="22dp"
        android:orientation="vertical">



        <EditText
            android:id="@+id/fullname"
            android:hint="Full Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:padding="8dp"
            android:background="#cccccc"
            android:layout_marginTop="12dp"
            android:layout_alignParentTop="true"
            android:inputType="textCapWords"
            />

        <EditText
            android:id="@+id/date"
            android:hint="Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:padding="8dp"
            android:background="#cccccc"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/fullname"
            android:inputType="textCapWords"
            />

        <EditText
            android:id="@+id/phone"
            android:hint="Phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:padding="8dp"
            android:background="#cccccc"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/date"
            android:inputType="number"
            />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:padding="8dp"
            android:background="#cccccc"
            android:hint="Email"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/phone"
            android:inputType="textCapWords"
            />

        <EditText
            android:id="@+id/farmname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:padding="8dp"
            android:background="#cccccc"
            android:hint="Farm Fresh"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/email"
            android:inputType="textCapWords"
            />

        <Button
            android:id="@+id/bunnon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update"
            android:layout_below="@+id/farmname"
            android:layout_marginTop="17dp"
            android:layout_alignStart="@+id/farmname"
            android:layout_alignEnd="@+id/farmname"
            android:backgroundTint="#3EA055"
            android:textColor="#000000"
            />






    </RelativeLayout>



</RelativeLayout>