<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <ImageView
        android:id="@+id/imageViewHomeIcon"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/logo_img"
        tools:ignore="ContentDescription" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewHomeIcon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="21dp"
        android:layout_marginBottom="22dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:text="Create your account"
            android:textColor="#3EA055"
            android:textSize="25dp"
            android:textStyle="bold" />



        <EditText
            android:id="@+id/fullname"
            android:hint="Full Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:padding="8dp"
            android:background="#fff"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/title"
            android:inputType="textCapWords"
            android:clickable="true"
            android:enabled="true"
            />

        <EditText
            android:id="@+id/farmname"
            android:hint="Farn Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:padding="8dp"
            android:background="#fff"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/fullname"
            android:inputType="textCapWords"
            android:clickable="true"
            android:enabled="true"
            />

        <EditText
            android:id="@+id/phoneoremail"
            android:hint="Phone Or Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:padding="8dp"
            android:background="#fff"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/farmname"
            android:inputType="textCapWords"
            android:clickable="true"
            android:enabled="true"
            />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:padding="8dp"
            android:background="#fff"
            android:hint="Password"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/phoneoremail"
            android:inputType="textPassword"
            android:clickable="true"
            android:enabled="true"
            />

        <EditText
            android:id="@+id/con_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:padding="8dp"
            android:background="#fff"
            android:hint="Confirm Password"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/password"
            android:inputType="textPassword"
            android:clickable="true"
            android:enabled="true"
            />

        <Button
            android:id="@+id/b1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:layout_below="@+id/con_password"
            android:layout_marginTop="17dp"
            android:layout_alignStart="@+id/con_password"
            android:layout_alignEnd="@+id/con_password"
            android:backgroundTint="#3EA055"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Or Sign in with"
            android:layout_below="@+id/b1"
            android:layout_marginTop="17dp"
            android:layout_alignStart="@+id/b1"
            android:layout_alignEnd="@+id/b1"
            android:backgroundTint="#00000000"
            android:textColor="#cccccc"
            android:textAlignment="center" />



        <TextView
            android:id="@+id/signup_alredy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Already have a account Sign In"
            android:layout_below="@+id/signup"
            android:layout_marginTop="17dp"
            android:layout_alignStart="@+id/b1"
            android:layout_alignEnd="@+id/b1"
            android:backgroundTint="#00000000"
            android:textColor="#cccccc"
            android:textAlignment="center" />

    </RelativeLayout>

</RelativeLayout>
